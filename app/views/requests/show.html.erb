<%- model_class = Request -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @request.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @request.username %></dd>
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @request.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_datetime) %>:</strong></dt>
  <dd><%= @request.start_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_datetime) %>:</strong></dt>
  <dd><%= @request.end_datetime %></dd>
  <dt><strong><%= model_class.human_attribute_name(:people_num) %>:</strong></dt>
  <dd><%= @request.people_num %></dd>
  <dt><strong><%= model_class.human_attribute_name(:budget_hotel) %>:</strong></dt>
  <dd><%= @request.budget_hotel %></dd>
  <dt><strong><%= model_class.human_attribute_name(:budget_meal) %>:</strong></dt>
  <dd><%= @request.budget_meal %></dd>
</dl>

<p>
  <b>candidates you created:</b>
  <% if @candidates.empty? %>
    <br>you have no candidate for now. 
    <li>
      <%= link_to 'create new candidate', new_request_candidate_path( @request ) %>
    </li>
  <% else %>
    <% @candidates.each do |candidate| %>
      <li>
      <%= link_to candidate.id, candidate_path( candidate ) %>
      </li>
    <% end %>
  <% end %>
</p>

<p>
  <b>plans you created:</b>
  <% if @plans.empty? %>
    <br>you have no plan for now. 
    <li>
      <%= link_to 'create new plan', new_request_plan_path( @request ) %>
    </li>
  <% else %>
    <% @plans.each do |plan| %>
      <li>
      <%= link_to plan.title, plan_path( plan ) %>
      </li>
    <% end %>
  <% end %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              requests_path, :class => 'btn'  %>
  <%#= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_request_path(@request), :class => 'btn' %>
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              request_path(@request),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

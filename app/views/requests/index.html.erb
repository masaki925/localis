<h1>Listing requests</h1>

<table>
  <tr>
    <th>User</th>
    <th>Title</th>
    <th>Start datetime</th>
    <th>End datetime</th>
    <th>People num</th>
    <th>Budget hotel</th>
    <th>Budget meal</th>
    <th>Option transport</th>
    <th>Option edit</th>
    <th>Option pdf</th>
    <th>Option booking</th>
    <th>Option guide</th>
    <th>Option qa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= request.user_id %></td>
    <td><%= request.title %></td>
    <td><%= request.start_datetime %></td>
    <td><%= request.end_datetime %></td>
    <td><%= request.people_num %></td>
    <td><%= request.budget_hotel %></td>
    <td><%= request.budget_meal %></td>
    <td><%= request.option_transport %></td>
    <td><%= request.option_edit %></td>
    <td><%= request.option_pdf %></td>
    <td><%= request.option_booking %></td>
    <td><%= request.option_guide %></td>
    <td><%= request.option_qa %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

